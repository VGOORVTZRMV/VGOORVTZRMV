<section id="map" class="contact_section">
    <div id="google_map" class="google_map"></div>
    <div class="contact_wrap">
        <div class="table-cell">
            <div class="container">
                <div class="col-sm-6 col-sm-offset-3">
                    <div class="contact_form_wrap align-center">
                        <h2>Напишіть нам:</h2>
                        <form action="contact.php" method="post" id="ajax_form" class="form-horizontal contact_form">
                            <div class="form-group">
                                <div class="col-sm-6">
                                    <input type="text" id="name" name="name" class="form-control" placeholder="Ваше ім'я" required>
                                </div>
                                <div class="col-sm-6">
                                    <input type="email" id="email" name="email" class="form-control" placeholder="Ваш email">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-12">
                                    <input type="text" id="subject" name="subject" class="form-control" placeholder="Тема листа" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-12">
                                    <textarea id="message" name="message" cols="30" rows="5" class="form-control" placeholder="Ваше повідомлення" required></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-12">
                                    <%= link_to 'Надіслати лист', 'mailto:auiaepdrhp@gmail.com', 'data-to': 'mailto:auiaepdrhp@gmail.com', class: 'more_project_btn mailto_link' %>
                                </div>
                            </div>
                            <div id="form-messages" class="alert" role="alert"></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
